<WorldButton>:
    theme_width: "Custom"
    width: "145dp"
    theme_height: "Custom"
    height: max(dp(40), button_text.height)
    MDButtonText:
        id: button_text
        text: self.parent.name
        adaptive_size: False
        adaptive_height: True

<DocumentVisual>:
    id: main
    style: "filled"
    padding: "4dp"
    size_hint: 1, None
    height: "75dp"
    focus_behavior: False
    button: button

    MDRelativeLayout:
        MDLabel:
            text: main.name + f" ({main.language})" if main.multilang else main.name
            pos_hint:{"center_x": 0.5, "center_y": 0.85 if main.description else 0.65}
            halign: "center"
            font_style: "Title"
            role: "medium"
            theme_text_color: "Custom"
            text_color: app.theme_cls.onSurfaceColor

        MDLabel:
            text: main.description
            pos_hint: {"center_x": 0.5, "center_y": 0.25}
            halign: "center"
            role: "small"
            theme_text_color: "Custom"
            text_color: app.theme_cls.onSurfaceColor

        MDLabel:
            text: main.authors
            pos_hint: {"center_x": 0.5, "center_y": 0.65 if main.description else 0.35}
            halign: "center"
            role: "small"
            theme_text_color: "Custom"
            text_color: app.theme_cls.onSurfaceColor

        MDButton:
            id: button
            pos_hint: {"center_x": 0.9, "center_y": 0.8}
            theme_height: "Custom"
            height: button_text.height + 10
            on_release: main.open_doc
            MDButtonText:
                id: button_text
                text: "Open"

<DocumentSelect>:
    scroll: scroll
    ScrollBox:
        id: scroll

<DocumentView>:
    scroll: scroll
    back: back
    ScrollBox:
        id: scroll

    MDIconButton:
        id: back
        icon: "arrow-left"

ContainerLayout:
    md_bg_color: app.theme_cls.backgroundColor
    main: main
    visual: visual
    scrollbox: scrollbox
    screen_manager: screen_manager

    MainLayout:
        id: main
        cols: 3
        padding: 3, 5, 0, 3
        spacing: "2dp"

        ScrollBox:
            id: scrollbox
            size_hint_x: None
            width: "150dp"

        MDDivider:
            orientation: "vertical"
            width: "4dp"

        MainLayout:
            id: visual
            cols: 1

            MDScreenManager:
                id: screen_manager